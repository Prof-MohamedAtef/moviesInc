<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000">
    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/vote_average_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="@string/vote_Average"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/vote_average_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vote_average_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="3.5"
        android:textSize="20sp"
        android:textColor="#FFFF"/>


    <TextView
        android:id="@+id/vote_release_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vote_average_title"
        android:layout_margin="20dp"
        android:text="@string/vote_Average"
        android:textSize="20sp"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/vote_release_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vote_release_title"
        app:layout_constraintBottom_toTopOf="@id/vote_average_title"
        android:layout_margin="20dp"
        android:text="11 Aug 2020"
        android:textSize="20sp"
        android:textColor="#FFFF"/>


    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vote_release_title"
        android:layout_margin="20dp"
        android:text="Spider Man"
        android:textSize="30sp"
        android:textColor="#FFFF"
        style="@style/TextAppearance.AppCompat.Title"/>


</androidx.constraintlayout.widget.ConstraintLayout>